<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jk.accelerometertest.MainActivity"
    android:id="@+id/myHorizLinearContainer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/myVerticalContainer1"
        android:layout_weight="1"
        android:background="#f60505"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/myVerticalContainer2"
        android:layout_weight="1"
        android:background="#0723f0"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/myVerticalContainer3"
        android:layout_weight="1"
        android:background="#46f706"></LinearLayout>
</LinearLayout>
